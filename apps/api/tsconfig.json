{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".", 
    "paths": {
      "@api/*": ["src/*"],
      "@shared/*": ["../../packages/shared/*"]
    }
  },
  "include": ["src/**/*","../../packages/shared/**/*"],
  "exclude": ["node_modules", "dist"]
}